      <%= f.input :address, input_html: { class: "form-control" } %>
    </div>
    <div class="mb-3">
      <%= f.input :phone_number, input_html: { class: "form-control" } %>
    </div>
    <div class="mb-3">
      <%= f.input :category, collection: Restaurant::CATEGORY, prompt: "Choisissez une catÃ©gorie", input_html: { class: "form-select" } %>
